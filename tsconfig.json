{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "es2018", "dom"],
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude":[
    "node_modules",
    "test"
  ],
  "include": [
      "src/**/*"
  ],
}
